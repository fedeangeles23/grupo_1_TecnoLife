<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head') %> 

<body class="registro">

    <%- include('./partials/header') %> 

    <main>
        <h1>Crear cuenta</h1>
        <form action="" method="post">
            <div class="container bottom">
                <input type="text" name="nombre" id="nombre" placeholder="Ingresa tu nombre y apellido" value="<%= locals.old && old.nombre ? old.nombre : null%>">
                <% if (locals.errors && errors.nombre) { %>
                    <small><%= errors.nombre.msg %></small>
                <% } %>
            </div>
            <div class="container bottom">
                <input type="text" name="email" id="email" placeholder="Ingresa tu email"value="<%= locals.old && old.email ? old.email : null%>"> required>
                <% if (locals.errors && errors.email) { %>
                    <small><%= errors.email.msg %></small>
                <% } %>
            </div>
            <div class="container bottom">
                <input type="password" name="contrasenia" id="contrasenia" placeholder="Ingresa tu contraseña" required>
                <% if (locals.errors && errors.contrasenia) { %>
                    <small><%= errors.contrasenia.msg %></small>
                <% } %>                
            </div>
            <div class="container bottom">
                <input type="password" name="contrasenia2" id="contrasenia2"  placeholder="Confirme su contraseña" required>
                <% if (locals.errors && errors.contrasenia2) { %>
                    <small><%= errors.contrasenia2.msg %></small>
                <% } %>                    
            </div>
            <div class="button">
                <button class = "spacing">REGISTRARSE</button>
                <p>¿Ya tenés creada una cuenta?</p>
                <p><a class="link" href="/ingresar">Inicia sesión aquí</a></p>
            </div>
        </form>
    </main>
    <%- include('./partials/footer') %> 
</body>



</html>