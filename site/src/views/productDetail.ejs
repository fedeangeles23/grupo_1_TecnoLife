<html lang="es">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

        <div class="main-wrapper">
            <div class="container-d">
                <div class="product-div">
                    <div class="product-div-left">
                        <div class="img-container-d">
